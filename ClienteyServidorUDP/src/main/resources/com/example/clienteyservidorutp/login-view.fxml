<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.clienteyservidorutp.LoginController"
      style="-fx-background-color: #222222;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Ingrese su nombre de usuario:" textFill="white"/>

        <TextField fx:id="usernameTextField" promptText="Nombre de usuario" style="-fx-background-color: #333333; -fx-text-fill: white;"/>

        <!-- Nuevo área para mostrar mensajes de error -->
        <Label fx:id="errorMessageLabel" textFill="red" visible="false"/>
        <!-- Fin del área de mensajes de error -->

        <Button fx:id="button" text="Iniciar Sesión" onAction="#loginButtonAction"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </children>
</VBox>
